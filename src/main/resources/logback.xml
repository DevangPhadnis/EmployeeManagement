<configuration>
    <appender name = "EventManagementFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            D:\EventManagement\logs\eventManagement.log
        </file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>D:\EventManagement\logs\eventManagement-%d{yy-HH-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} - %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="EventManagementFileAppender"/>
    </root>
</configuration>